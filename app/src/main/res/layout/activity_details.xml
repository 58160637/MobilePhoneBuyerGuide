<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.DetailsActivity"
        android:padding="20dp"
        android:orientation="vertical">

    <LinearLayout
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating:  "
                android:textSize="15sp"/>
        <TextView
                android:id="@+id/detailsPhoneRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.9"
                android:textSize="15sp"/>
        <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:  $"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"/>
        <TextView
            android:id="@+id/detailsPhonePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="179.99"
            android:textSize="15sp"/>
    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:src="@drawable/test"
                android:id="@+id/detailsPhonePic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:layout_centerHorizontal="true"/>
    </FrameLayout>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">

        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/detailsPhoneName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moto E4 Plus"
                    android:textSize="30sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/detailsPhoneBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samsung"
                    android:layout_marginLeft="15dp"
                    android:textSize="25sp"/>
        </LinearLayout>

        <TextView
                android:id="@+id/detailsPhoneDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First place in our list goes to the excellent Moto E4 Plus. It's a cheap phone that features phenomenal battery life, a fingerprint scanner and a premium feel design, plus it's a lot cheaper than the Moto G5 below. It is a little limited with its power, but it makes up for it by being able to last for a whole two days from a single charge. If price and battery are the most important features for you, the Moto E4 Plus will suit you perfectly."
                android:layout_marginTop="10dp"
                android:textSize="15sp"/>
    </LinearLayout>


</LinearLayout>